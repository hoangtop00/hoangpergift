import time 
from threading import Thread
import sys

lyrics =[
   ("náº¯ng mang em Ä‘i rá»“i ğŸ™",0.09),
   ("em Ä‘á»ƒ láº¡i Ä‘á»›n nhau muÃ´n pháº§n ğŸ™", 0.09),
   ("Ä‘Ã£ lá»¡ buÃ´ng nhau rÃ£ rá»i", 0.09 ),
   ("thÃ´i thÃ¬ xa pháº£i Ä‘Ã nh cÃ¡ch xa ! ğŸ™", 0.09),
   ("nhá»› nhau bao nhiÃªu pháº§n", 0.09),
   ("cÅ©ng Ä‘Ã¢u thá»ƒ tÃ¬m tháº¥y nhau !", 0.09), 
   ("cÃ¡ch xa nhau lÃ m gÃ¬ ?", 0.08),
   ("Ä‘á»ƒ giá» Ä‘Ã¢y pháº£i chá»‹u Ä‘á»›n Ä‘au thÃªm pháº§nâ€¦ ğŸ™", 0.1), 
]
delays = [0, 5.0 , 7.0 , 9.0 , 12.0]

def animate_text( text,delay=0.1):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(delay)
    print()

def sing_lyric(lyric,delay,speed):
    time.sleep(delay)
    animate_text(lyric,speed)

def sing_song():
    threads = []
    for i in range(len(lyrics)):
        lyric, speed = lyrics[i]
        t= Thread(target=sing_lyric, args=(lyric, delays[i],speed)) 
        threads.append(t)
        t.start()
    for thread in threads : 
        thread.join()

if __name__ == "__main__" :
    sing_song()               
